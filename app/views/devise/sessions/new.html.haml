/ start-breadcrumbs
.breadcrumbs
  .container
    .breadcrumbs-main
      %ol.breadcrumb
        %li
          %a{:href => "/"} Home
        %li Sign In
/ end-breadcrumbs
.prdt
  .container
    .prdt-top
      .col-md-12
        .product-one.signup
          .register-top.heading
            %h2 SIGN IN
          .register-main
            .col-md-6.col-md-offset-3.account-left
              = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                = f.error_notification
                .form-group.has-feedback
                  = f.input :email,                                                                     |
                    required: false,                                                                    |
                    autofocus: true,                                                                    |
                    input_html: { autocomplete: "email", class: "form-control", placeholder:  "Email" } |
                  %span.glyphicon.form-control-feedback{"aria-hidden" => "true"}
                .form-group.has-feedback
                  = f.input :password,                                                                                |
                    required: false,                                                                                  |
                    input_html: { autocomplete: "current-password", class: "form-control", placeholder:  "Password" } |
                  %span.glyphicon.form-control-feedback{"aria-hidden" => "true"}
                .form-group.has-feedback
                  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
                .form-group.has-feedback
                  .form-actions
                    = f.button :submit, "Log In", class: "btn btn-default"
              %p= render "devise/shared/links"
