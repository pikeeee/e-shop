/ start-breadcrumbs
.breadcrumbs
  .container
    .breadcrumbs-main
      %ol.breadcrumb
        %li
          %a{:href => "/"} Home
        %li Sign Up
/ end-breadcrumbs
.prdt
  .container
    .prdt-top
      .col-md-12
        .product-one.signup
          .register-top.heading
            %h2 REGISTER
          .register-main
            .col-md-6.col-md-offset-3.account-left
              = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                = f.error_notification
                .form-group.has-feedback
                  = f.input :email,                                                                     |
                    required: true,                                                                     |
                    autofocus: true,                                                                    |
                    input_html: { autocomplete: "email", class: "form-control", placeholder:  "Email" } |
                .form-group.has-feedback
                  = f.input :password,                                                                            |
                    required: true,                                                                               |
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),         |
                    input_html: { autocomplete: "new-password", class: "form-control", placeholder:  "Password" } |
                .form-group.has-feedback
                  = f.input :password_confirmation,                                                                       |
                    required: true,                                                                                       |
                    input_html: { autocomplete: "new-password", class: "form-control", placeholder:  "Confirm Password" } |
                .form-actions
                  = f.button :submit, "Sign Up", class: "btn btn-default"
              %p= render "devise/shared/links"
