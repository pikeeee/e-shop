/ start-breadcrumbs
.breadcrumbs
  .container
    .breadcrumbs-main
      %ol.breadcrumb
        %li= link_to render_breadcrumbs, root_path
        %li= link_to 'Brands', brands_path
        %li.active= @brand.title
/ end-breadcrumbs
/ prdt-starts
.prdt
  .container
    .prdt-top
      .col-md-9.prdt-left
        - if @brand.products.empty?
          %h3 No products in this category yet
        - else
          = render 'include/product/products', products: @brand.products
      .col-md-3.prdt-right
        = render 'include/shared/sidebar'
      .clearfix
/ prdt-ends
